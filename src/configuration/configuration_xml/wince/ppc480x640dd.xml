            Name="CHAM_FULLHEIGHT"
            Value="536"
            Comment="(Chameleon Only) full display height (QVA PocketPC)"/>

  <constant Type="int"
            Name="FULLWIDTH"
            Value="480"
            Comment="(Fixed) full display width"/>
  <constant Type="int"
            Name="FULLHEIGHT"
            Value="536" 
            Comment="(Fixed) full display height"/>
  <constant Type="int"
            Name="NORMALWIDTH"
            Value="480" 
            Comment="(Fixed) normal width"/>
  <constant Type="int"
            Name="NORMALHEIGHT"
            Value="536" 
            Comment="(Fixed) normal height"/>

