            Name="JWC_WINCE_TITLE_HEIGHT"
            Value="52"
            Comment="Height of the WinCE title at the top of LCD"/>
  <constant Type="int"
            Name="JWC_WINCE_MENU_HEIGHT"
            Value="52"
            Comment="Height of the WinCE menu at the bottom of LCD"/>
