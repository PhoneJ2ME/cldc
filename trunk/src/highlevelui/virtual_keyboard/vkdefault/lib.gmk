######################################################################
#
# VIRTUAL_KEYBOARD Virtual keyboard Library
#
######################################################################

# Name of the library
VIRTUAL_KEYBOARD_D_NAME = virtual_keyboard/vkdefault
VIRTUAL_KEYBOARD_D_DIR = $(SUBSYSTEM_DIR)/highlevelui/$(VIRTUAL_KEYBOARD_D_NAME)

# Add to library set for this build
LIB_SET += $(VIRTUAL_KEYBOARD_D_NAME)

# Export include files
#SUBSYSTEM_VIRTUAL_KEYBOARD_EXTRA_INCLUDES += -I$(VIRTUAL_KEYBOARD_D_DIR)/include

# Javadoc source path
MIDP_JAVADOC_SOURCEPATH += $(VIRTUAL_KEYBOARD_D_DIR)/classes

# Java files for the library
#

SUBSYSTEM_VIRTUAL_KEYBOARD_JAVA_FILES += \
    $(VIRTUAL_KEYBOARD_D_DIR)/classes/com/sun/midp/lcdui/VirtualKeyboard.java \
    $(VIRTUAL_KEYBOARD_D_DIR)/classes/com/sun/midp/lcdui/VirtualKeyboardListener.java
    
ifeq ($(SUBSYSTEM_LCDUI_MODULES), chameleon)
SUBSYSTEM_VIRTUAL_KEYBOARD_JAVA_FILES += \
    $(VIRTUAL_KEYBOARD_D_DIR)/classes/com/sun/midp/chameleon/input/VirtualKeyboardInputMode.java
endif

