######################################################################
#
# OCSP (Online Certificate Status Protocol) library
#
######################################################################


# Adds to local variable and global SUBSYSTEMS list
#
SUBSYSTEMS += ocsp

# Name of the library
SECURITY_OCSP_NAME = security/ocsp
SECURITY_OCSP_DIR = $(SUBSYSTEM_DIR)/$(SECURITY_OCSP_NAME)

# Java files for the library
#
SUBSYSTEM_SECURITY_JAVA_FILES += \
    $(SECURITY_OCSP_DIR)/classes/com/sun/midp/pki/ocsp/OCSPException.java \
    $(SECURITY_OCSP_DIR)/classes/com/sun/midp/pki/ocsp/OCSPValidator.java \
    $(SECURITY_OCSP_DIR)/classes/com/sun/midp/pki/ocsp/CertStatus.java

ifeq ($(USE_OCSP), true)
include $(SECURITY_OCSP_DIR)/reference/lib.gmk
else
include $(SECURITY_OCSP_DIR)/stubs/lib.gmk
endif
